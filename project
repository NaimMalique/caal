.data

welcome:   .asciiz "welcome to our restaurant\n"
home: .asciiz "choose option: "
option: .asciiz "(1)Display menu    (2)fetch\n"

#list of menu
rice: .asciiz "\n1)fried rice\n"
noodle: .asciiz "2)curry noodle\n"
chicken: .asciiz "3)chicken chop\n"
fish: .asciiz "4)fish and chips\n"
meatball: .asciiz "5)blackpapper meatball\n"
tea: .asciiz "6)ice lemon tea\n" 
milo: .asciiz "7)ice milo\n"
coffee: .asciiz "8)hot coffee\n"
orange: .asciiz "9)orange juice\n"
smoothie: .asciiz "10)chocolate smoothie"

menu: .word rice, noodle, chicken, fish, meatball, tea, milo, coffee, orange, smoothie		#array of menu list

iterator:	.word 0		#first index of array
size:		.word 9	      	#last index of array
	      	      	      	      	      	      
.text          
main:   
	li $v0, 4       	# print welcome msg
        la $a0, welcome  
        syscall 
        
        li $v0, 4		# print option msg
        la $a0, option
        syscall
  
        li $v0, 4		# print insruction msg
        la $a0, home
        syscall
              
        addi $t0, $zero, 1		#get input option
        li $v0, 5
        syscall
        
        move $t1, $v0
        bne $t0, $t1, display_array	#compare input element. if 1 go to display menu list. else to to fetch
 
 #size of menu array       
        la $t0, menu
        lw $t1, iterator
        lw $t2, size
        
 #print elements in menu array
 display_array:
 	#for() loop 
	bgt $t1, $t2, exit_loop
	sll $t3, $t1, 2 #t3= 4xi
	addu $t3, $t3, $t0 #4i=4i + memory location of menu array
	
	li $v0, 4		#print index element in array
	lw $a0, 0($t3)
        syscall
        
        addi $t1, $t1, 1
        
        j display_array		#loop array to other index element until bgt instruction complete
        
exit_loop:
        
